{
"manifest_version": 2, 
"name": "YBI Translate",
"version": "0.0.2",
"description": "YBI Translate for Chrome",
"icons": {
	"16": "Little Bull-16x16.png",
	"48": "Little Bull-48x48.png",
    "128": "Little Bull-128x128.png"
	},
"content_scripts": [ {
	"all_frames": true,
	"js": [ "get_selection.js"],
	"matches": [ "http://*/*", "https://*/*" ],
	"run_at": "document_start"
   	} ],
"background": {
	"scripts": ["background.js"]
 	},
"permissions": [
	"contextMenus",
	"background",
	"tabs",
	 "http://*/*",
	 "https://*/*"
	],
"commands": {
	"translate-selection": {
	    "suggested_key": {
			"windows": "Alt+T",
			"mac": "Alt+T"
    		},
		"description": "Translate selection"
		}
  	}
}